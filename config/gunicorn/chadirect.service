[Unit]
Description=itechs backend
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/backend/src
ExecStart=/home/ubuntu/backend/.env/bin/gunicorn --workers 4 --worker-class gevent --worker-connections 1000 --timeout 300 --reload --bind unix:/home/ubuntu/backend/config/gunicorn/itechs.sock itechs.wsgi:application --access-logfile /home/ubuntu/backend_config/log/gunicorn-access.log --error-logfile /home/ubuntu/backend_config/log/gunicorn-error.log
ExecReload=/bin/kill -s HUP $MAINPID

[Install]
WantedBy=multi-user.target
